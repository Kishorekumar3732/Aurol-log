<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PureToneTestActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/startTestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Test" />

            <Button
                android:id="@+id/heardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heard" />

            <Button
                android:id="@+id/cannotHearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cannot Hear" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Results" />

            <TextView
                android:id="@+id/frequencyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequency" />

            <TextView
                android:id="@+id/dbLevelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decibel Level" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
